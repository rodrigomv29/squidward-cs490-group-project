generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int          @id @default(autoincrement())
  email               String       @unique
  hashedPassword      String
  salt                String
  resetToken          String?
  resetTokenExpiresAt DateTime?
  general             Boolean      @default(true)
  business            Boolean      @default(false)
  entertainment       Boolean      @default(false)
  health              Boolean      @default(false)
  science             Boolean      @default(false)
  sports              Boolean      @default(false)
  technology          Boolean      @default(false)
  customLists         CustomList[]
  userArticles        UserArticle[]
}

model Article {
  id          Int       @id @default(autoincrement())
  sourceId    String?
  sourceName  String?
  author      String?
  title       String
  description String?
  url         String
  urlToImage  String?
  publishedAt DateTime
  content     String?
  categoryId  Int?
  Category    Category? @relation(fields: [categoryId], references: [id])
}

model Category {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  articles     Article[]
  userArticles UserArticle[]
}

model CustomList {
  id         Int           @id @default(autoincrement())
  name       String        @unique
  userId     Int
  user       User          @relation(fields: [userId], references: [id])
  articles   UserArticle[]
}

model UserArticle {
  id           Int         @id @default(autoincrement())
  sourceId     String?
  sourceName   String?
  author       String?
  title        String
  description  String?
  url          String
  urlToImage   String?
  publishedAt  DateTime
  content      String?
  categoryId   Int?
  Category     Category?   @relation(fields: [categoryId], references: [id])
  customList   CustomList? @relation(fields: [customListId], references: [id])
  customListId Int?
  articleId    Int
  user         User        @relation(fields: [userId], references: [id]) 
  userId       Int

  @@unique([customListId, articleId])
}

