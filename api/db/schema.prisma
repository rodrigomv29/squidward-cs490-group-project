generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int          @id @default(autoincrement())
  email               String       @unique
  hashedPassword      String
  salt                String
  resetToken          String?
  resetTokenExpiresAt DateTime?
  general             Boolean      @default(true)
  business            Boolean      @default(false)
  entertainment       Boolean      @default(false)
  health              Boolean      @default(false)
  science             Boolean      @default(false)
  sports              Boolean      @default(false)
  technology          Boolean      @default(false)
  customLists         CustomList[]
}

model Article {
  id           Int         @id @default(autoincrement())
  sourceId     String?
  sourceName   String?
  author       String?
  title        String
  description  String?
  url          String
  urlToImage   String?
  publishedAt  DateTime
  content      String?
  categoryId   Int?
  Category     Category?   @relation(fields: [categoryId], references: [id])
  customList   CustomList? @relation(fields: [customListId], references: [id])
  customListId Int?
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  articles Article[]
}

model CustomList {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  userId   Int
  user     User      @relation(fields: [userId], references: [id])
  articles Int[]
  Article  Article[]
}
